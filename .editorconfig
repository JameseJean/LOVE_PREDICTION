# EditorConfig is awesome: https://EditorConfig.org

# 顶层配置文件
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript 文件
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# HTML 和 CSS 文件
[*.{html,css}]
indent_style = space
indent_size = 4

# Markdown 文件
[*.md]
trim_trailing_whitespace = false 